/* pages/math_collect_manage/math_collect_manage.wxss */
page{
    height:100%;
    min-height:100%;
    background: #e9e4d9;
    color:black;
    font-family:"Microsoft Yahei","宋体";
    font-size:14px;
}


.Happy_Valley{
    height: 40rpx;
    background-color: #12b7f5;
    display: flex;
}
.user_photo_title{
    width: 50rpx;
    height: 50rpx;
    border-radius: 200rpx; 
    margin-left: 10rpx;
}
.user_name_title{
    font-size: 20rpx;
    margin-top: 10rpx;
    margin-left: 10rpx;
    color: white;
}

.coletct_item{
    width: 50rpx;
    height: 50rpx;
}
.coletct_item_container{
    border-radius: 200rpx; 
    margin: 30rpx;
    width: 50rpx;
    height: 50rpx;
}
.title{
    display: flex;
    flex-direction: row;
}
.user_title{
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx; 
    margin: 100rpx 170rpx 10rpx 170rpx;
}
.user_title_group{
    display: flex;
    flex-direction: column;
}
.user_name{
    text-align: center;
    margin: 5rpx;
}
.user_progress{
    margin: 15rpx 0;
}
.image_hover{
    background-color: gray;
}


.message__list{
  background-color: white;
  margin: 20rpx 0; 
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 50rpx;
  padding-right: 15rpx;
  /*background-color: #e9e4d9;*/
  /*background-color: rgba(143,202,255,0.1);*/
}
.hover_item{
    background-color: lightgray;
}
.item-left{
    margin-top: 15rpx;
    display:table-cell;
    text-align: center; 
}

.image{
    width:  55rpx; 
    height: 50rpx;
}

.item-middle{
    flex: 1;
    overflow: hidden;
}

.item_right{
    padding-top: 20rpx;
    overflow: hidden; 
}
.line{
    height: 1px;
    width:93%;
    background-color: #d1d1cf;
    margin-left: 30rpx;
}

.tree_image_right{
    right: 15rpx;
    width: 50rpx; 
    height: 50rpx;
}
.item_juzhong{
    margin: 25rpx;
}
.line_btween{
    height: 50rpx;
    width: 100%;
    background-color: #e9e4d9;
}