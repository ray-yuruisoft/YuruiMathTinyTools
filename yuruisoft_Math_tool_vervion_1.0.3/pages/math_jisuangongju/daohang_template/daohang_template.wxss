page{
    height:100%;
    min-height:100%;
    background: #e9e4d9;
    color:black;
    font-family:"Microsoft Yahei","宋体";
    font-size:14px;
}
.main-bg{
    height:100%;
    width:100%;
    position:absolute;
    top:0;
    left:0;
    z-index:-1;
}
.gray_back{
    height:100%;
    width:100%;
    position:absolute;
    top:0;
    left:0;
    z-index: 0;
    background-color: rgba(233,228,217,0.6);
}
.content{
    position:relative;
    padding-left:20rpx;
    padding-right:20rpx;
    height:100%;
}
.list-item{
    height:80rpx;
    vertical-align: middle;
    margin-top:45rpx;
    border-radius: 15rpx; 
    display: flex;
    flex-direction: row;
}

.list_item_hover{
    border: 5rpx solid gray;
}
.life-title{
    font-size:16px;
    padding-bottom:25rpx;
}
.life-des-container{
    width:300rpx;
    display:inline-block;
    padding-left: 25rpx;
    padding-top: 15rpx;
}
.life-des{
    font-size:12px;
}
.image_back_ground{
    width: 0rpx;
    height: 0rpx;
}