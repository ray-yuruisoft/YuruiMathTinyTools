<template name="result_2_player">
    <view class = "panel" style = "display: {{panel_Data.view_isshow ? 'block':'none'}}; ">
        <view class = "text_show">
            <view class = "player_1 transform" style = "opacity:{{one_player_judge ? 0:1}};">
                <text class = "text_content">
                    {{panel_Data.player_1_score}}
                </text>
                <view class = "button_group">
                    <view class = "button_center_">
                        <view hover = "true" hover-class="button_hover" bindtap="back_to"  class = "button_view">分 享</view>
                        <view hover = "true" hover-class="button_hover" bindtap="do_again" class = "button_view">重 来</view>
                    </view>                    
                </view>
            </view>
            <view class = "line"></view>
            <view class = "player_2">
                <text class = "text_content">
                    {{panel_Data.player_2_score}}
                </text>
                <view class = "button_group">
                    <view class = "button_center_">
                        <view hover = "true" hover-class="button_hover" bindtap="back_to"  class = "button_view">分 享</view>
                        <view hover = "true" hover-class="button_hover" bindtap="do_again" class = "button_view">重 来</view>                
                    </view>                   
                </view>
            </view>           
        </view>
    </view>
</template>